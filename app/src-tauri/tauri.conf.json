{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Basilisk4All",
  "version": "0.1.0",
  "identifier": "com.pdreyer.Basilisk4All",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Basilisk4All",
        "width": 1000,
        "height": 820,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "supported_devices/*.json",
      "icons/TrayIcon.ico"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/TrayIcon.ico"
    ]
  }
}